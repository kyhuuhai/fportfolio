<%= form_for Comment.new, remote: true do |f| %>
  <div class="col-md-12" data-turbolinks-temporary>
    <div class="col-md-12">
    <div class="comment-from">
      <% if current_user.nil? %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      <% else %>
        <%= f.hidden_field :name, value: current_user.name %>
      <% end %>
      <%= f.text_area :content, placeholder: "Comment something", class: "form-control",
        id: "content"%>
      <%= f.hidden_field :id, value: @project.id %>
    </div>
    </div>

  </div>

<% end %>
<script type="text/javascript">
 $('#content').keypress(function(e){
      if(e.which == 13){
           $(this).closest('form').submit();
           $('.modal-body').stop().animate({
          scrollTop: $('.modal-body')[0].scrollHeight}, 800);
       }
    });
</script>
