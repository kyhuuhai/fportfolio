<div class="col-sm-12 comment_box">
  <div class="panel panel-white post panel-shadow content-height">
    <div class="post-heading">
      <div class="pull-left image">
        <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
      </div>
      <div class="pull-left meta">
        <div class="title h5">
          <a href="#"><b><%= comment.name %></b></a>
        </div>
          <h6 class="text-muted time"><%= time_ago_in_words(comment.created_at)  unless comment.created_at.blank? %></h6>
      </div>
    </div>
    <div class="post-description">
      <span id="comment_content"><%= comment.content %></span>
    </div>
  </div>
</div>

